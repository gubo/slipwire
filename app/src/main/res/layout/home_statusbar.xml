
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_statusbar"
    android:background="#22FFFFFF"
    android:orientation="horizontal"
    android:padding="5dp"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/home_statusbar_pending"
        android:layout_marginLeft="5dp"
        android:layout_width="64dp"
        android:layout_height="24dp"
        android:background="@drawable/pending">
    </View>

    <LinearLayout
        android:gravity="right"
        android:background="#00000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/home_statusbar_network_activity"
            android:layout_marginRight="5dp"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/network_activity">
        </View>
        <Button
            android:id="@+id/home_statusbar_cancel_all"
            android:layout_marginRight="5dp"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:tag="gubo.sample.event.Cancel"
            android:background="@drawable/ic_cancel_all">
        </Button>
    </LinearLayout>
</LinearLayout>