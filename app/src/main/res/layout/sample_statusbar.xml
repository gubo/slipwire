
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sample_statusbar"
    android:background="#22FFFFFF"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/sample_pending"
        android:visibility="visible"
        android:layout_marginLeft="10dp"
        android:layout_width="64dp"
        android:layout_height="24dp"
        android:background="@drawable/pending">
    </View>

    <LinearLayout
        android:gravity="right"
        android:background="#00000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/sample_statusbar_fetching"
            android:alpha=".25"
            android:layout_margin="5dp"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/ic_fetching">
        </Button>
        <Button
            android:id="@+id/sample_statusbar_cancel"
            android:layout_margin="5dp"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:tag="gubo.sample.event.Cancel"
            android:background="@drawable/ic_cancel_all">
        </Button>
    </LinearLayout>
</LinearLayout>